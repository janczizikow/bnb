<%= link_to boat_path(boat), class: "Card" do %>
  <div class="Card__inner">
    <figure class="Card__img">
      <% if boat.photo.present? %>
        <img
          src='<%= "#{boat.photo_url(:placeholder)}" %>'
          data-lowsrc='<%= "#{boat.photo_url(:placeholder)}" %>'
          data-src='<%= "#{boat.photo}" %>'
          alt='<%= "#{boat.title}" %>'
          class="lazyload"
          />
      <% end %>
    </figure>
    <div class="Card__body">
      <h3 class="Card__title"><%= boat.title %></h3>
      <div class="Card__price">$ <%= "#{boat.price}0" %> / day</div>
      <div class="Card__meta">
        <div class="Card__rating">
            <div class="d-flex">
              <% (1..5).to_a.each do |el| %>
                <% if  boat.reviews.present? %>
                    <% if el <= boat.reviews.last.rating %>
                      <i class="fas fa-star" style="color: #ffb400;"></i>
                  <% else %>
                    <i class="fas fa-star" style="color: #ccc"></i>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </span>
        </div>
          <i class="fas fa-heart color-grey-text"></i>
      </div>
    </div>
  </div>
<% end %>
