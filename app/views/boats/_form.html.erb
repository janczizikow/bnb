<%= form_for(boat) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden, class: 'form-control'  %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
