<div class="flexbox">
  <div class="card"></div>



</div>


<ul>
  <% @boats.each do |boat|  %>
    <li><%= link_to boat.title, boat_path(boat) %>
      <ul>
        <li><%= "Description: #{boat.description}" %></li>
        <li><%= link_to "Edit", edit_boat_path(boat) %></li>
        <li> <%= link_to "Destroy", boat_path(boat), method: :delete, data: { confirm: "Delete #{boat.title}?"} %></li>
      </ul>
     </li>
     <li>
       <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
       ></div>
     </li>
  <% end %>
</ul>

